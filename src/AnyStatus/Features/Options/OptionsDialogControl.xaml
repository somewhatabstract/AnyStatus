<UserControl x:Class="AnyStatus.Views.OptionsDialogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnyStatus.Views"
             xmlns:vm="clr-namespace:AnyStatus.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">

    <UserControl.DataContext>
        <vm:OptionsViewModel />
    </UserControl.DataContext>

    <ScrollViewer>
        <Grid>
            <StackPanel HorizontalAlignment="Left">
                <Button Width="Auto" Padding="2" Command="{Binding ResetAllSettingsCommand}" Margin="3">Reset all settings</Button>
            </StackPanel>
        </Grid>
    </ScrollViewer>

</UserControl>

<Window x:Class="AnyStatus.Features.Edit.EditWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:AnyStatus.Features.Edit"
             mc:Ignorable="d" 
             Height="300" 
             Width="400"
             WindowStartupLocation="CenterOwner"
             Title="Edit"
             d:DataContext="{d:DesignInstance Type=local:EditViewModel}">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <xctk:PropertyGrid Grid.Row="0"
                           Margin="3"
                           ShowSearchBox="False" 
                           ShowSortOptions="False" 
                           ShowSummary="True"
                           ShowTitle="True"
                           BorderBrush="{x:Null}"
                           SelectedObject="{Binding Item}">
            
        </xctk:PropertyGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Command="{Binding SaveCommand}" Width="70" Margin="3">Save</Button>
            <Button Command="{Binding CancelCommand}" Width="70" Margin="3">Cancel</Button>
        </StackPanel>

    </Grid>
</Window>
